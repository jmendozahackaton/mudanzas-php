{
    "name": "mudanzas-app/api",
    "description": "API para plataforma de mudanzas",
    "type": "project",
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "google/cloud-tools": "^0.10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/config/database.php",
            "src/config/cors.php"
        ]
    },
    "scripts": {
        "start": "php -S localhost:8080 -t src",
        "deploy": "gcloud run deploy mudanzas-php --source . --region us-central1 --allow-unauthenticated"
    },
    "config": {
        "platform": {
            "php": "8.4"
        },
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
